<p id="notice"><%= notice %></p>
<br>
<div class="ui grid">
  <div class="fifteen wide column">
      <%= link_to 'New Stock',new_stock_path, class: "ui black basic right floated button"%>
  </div>
</div>

<div class="ui grid">
  <div class="centered fifteen wide column">
    <table class="tableFixHead ui tablet stackable table">
      <thead>
      <tr>
        <th>Warehouse</th>
        <th>Item code</th>
        <th>Description</th>
        <th>Assortment</th>
        <th>Item group</th>
        <th>Item unit</th>
        <th>Stock</th>
        <th>Quantity to be delivered</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @stocks.each do |stock| %>
        <tr>
          <td><%= stock.warehouse %></td>
          <td><%= stock.item_code %></td>
          <td><%= stock.description %></td>
          <td><%= stock.assortment %></td>
          <td><%= stock.item_group %></td>
          <td><%= stock.item_unit %></td>
          <td><%= stock.stock %></td>
          <td><%= stock.qty_delivery %></td>
          <td><%= link_to 'Show', stock %></td>
          <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
          <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>