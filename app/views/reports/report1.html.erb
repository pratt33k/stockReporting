<p id="notice"><%= notice %></p>

<div class="table-responsive">
    <table class="tableFixHead table table-dark table-striped table-bordered table-sm">
      <thead>
      <tr>
        <th>Warehouse</th>
        <th>Item code</th>
        <th>Description</th>
        <th>Assortment</th>
        <th>Item group</th>
        <th>Item unit</th>
        <th>Stock</th>
        <th>Quantity to be delivered</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @stocks.each do |stock| %>
        <tr>
          <td><%= stock.warehouse %></td>
          <td><%= stock.item_code %></td>
          <td><%= stock.description %></td>
          <td><%= stock.assortment %></td>
          <td><%= stock.item_group %></td>
          <td><%= stock.item_unit %></td>
          <td><%= stock.stock %></td>
          <td><%= stock.qty_delivery %></td>
          <td><%= link_to 'Show', stock %></td>
          <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
          <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
</div>
</div>
<br>

